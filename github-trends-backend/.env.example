# Server
PORT=3000
NODE_ENV=development

OPENAI_API_KEY=your_openai_api_key
GOOGLE_CLOUD_PROJECT=project_name
GOOGLE_APPLICATION_CREDENTIALS=path_to_json_credentials

LOG_LEVEL=debug

# PostgreSQL Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/github_trends_db
# Optional: Separate test database URL (auto-generated if not provided)
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/github_trends_db_test
POSTGRES_MAX_CONNECTIONS=20

# Redis Configuration (uses database 0 for production, 1 for tests)
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password_if_needed
